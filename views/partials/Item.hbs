<li class="col-xs-12 col-sm-6 col-md-3 col-lg-3 item">
    <div class="card">
        <div class="item-img-container">
            <img class="card-img-top img-responsive item-img" src={{image}} alt="Card image cap">
        </div>

        <div class="card-body">
            <h5 class="card-title name">{{name}}</h5>
            <p class="card-text author">{{author}}</p>
            <p class="card-text">
                <span class="finalPrice">{{finalPrice}}</span>
                <span class="regularPrice">{{regularPrice}}</span>
                <span class="sale">{{saleTag}}</span>
            </p>
        </div>
    </div>
</li>
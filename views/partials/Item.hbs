<li class="col-xs-12 col-sm-6 col-md-3 col-lg-3 item">
    <div class="card">
        <div class="item-img-container">
            <img class="card-img-top img-responsive item-img" src={{Book.image}} alt="Card image cap">
        </div>

        <div class="card-body">
            <h5 class="card-title name">{{Book.name}}</h5>
            <p class="card-text author">{{Book.author}}</p>
            <p class="card-text">
                <span class="finalPrice">{{Book.finalPrice}}</span>
                <span class="regularPrice">{{Book.regularPrice}}</span>
                <span class="sale">{{Book.saleTag}}</span>
            </p>
        </div>
    </div>
</li>
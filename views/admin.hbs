                            <td>
                                <a href="#" class="btn btn-outline-success btn-sm">View Order</a>
                            </td>
                            <td>
                                <a href="#" class="btn btn-outline-danger btn-sm">Cancel</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="../public/js/jquery-3.3.1.min.js"></script>
